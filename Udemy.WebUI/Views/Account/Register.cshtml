@model Udemy.WebUI.Models.RegisterModel;

@{
    Layout = "~/Views/Shared/_LayoutForModel.cshtml";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>


<style>
    .SignUpBtn{
        border: 1px solid darkviolet;
        background-color:transparent;
        color:black;
        transition:0.2s;
    }

    .SignUpBtn:hover{
            background-color: darkviolet;
            color: white;
            transition: 0.2s;
    }

</style>




<div id="InputsId" class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-white text-dark" style="border:1px solid darkviolet;">
                <div class="card-body p-5 text-center">

                    <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <h2 class="fw-bold mb-5 text-uppercase" style="color:black;">Sing Up</h2>

                            <div class="mb-4" style="border:1px solid darkviolet;">  
                                <input name="file" type="file" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-4" style="border:1px solid darkviolet;">
                                <input asp-for="FirstName" type="text" id="typeFirstnameX" placeholder="First Name" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-4" style="border:1px solid darkviolet;">
                                <input asp-for="LastName" type="text" id="typeLastnameX" placeholder="Last Name" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-4" style="border:1px solid darkviolet;">
                                <input asp-for="UserName" type="text" id="typeUsernameX" placeholder="Username" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-4" style="border:1px solid darkviolet;">
                                <input asp-for="Email" type="email" id="typeEmailX" placeholder="E-Mail" class="form-control form-control-lg" />
                            </div>

                            <div class="mb-4" style="border:1px solid darkviolet;">
                                <input asp-for="Password" type="password" id="typePasswordX" placeholder="Password" class="form-control form-control-lg" />
                            </div>
                            <div class="mb-4" style="border:1px solid darkviolet;">
                                <input asp-for="RePassword" type="password" id="typeRePasswordX" placeholder="Reset Password" class="form-control form-control-lg" />
                            </div>

                            <button class="SignUpBtn btn btn-lg px-5" type="submit">Sign Up</button>

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-dark"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-dark"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-dark"><i class="fab fa-google fa-lg"></i></a>
                            </div>

                        </div>

                        <div>
                            <p class="mb-0">
                                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-black fw-bold">Sign In</a>
                            </p>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


