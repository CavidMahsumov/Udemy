@using Microsoft.AspNetCore.Identity;
@model Udemy.WebUI.Models.AdminViewModel;


@{
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}


<a asp-controller="Admin" asp-action="Index" class="btn btn-primary text-black">Edit</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RoleList)
        {

            <tr>
                <th scope="row">1</th>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Admin" asp-action="RoleEdit" class="btn btn-primary text-black">Edit</a>
                </td>
            </tr>
        }

    </tbody>
</table>